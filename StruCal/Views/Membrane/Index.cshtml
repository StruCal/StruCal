
@{
    ViewBag.Title = "Index";
}
@Styles.Render("~/Content/angular")
@Styles.Render("~/Content/Membrane")
@Styles.Render("~/Content/checkBoxes")
<link href="~/Content/PanelTabs.css" rel="stylesheet" />


<div class="container-fluid" ng-app="membraneFEM" ng-controller="mainCtrl">
    <h2>Welcome to the Concrete Elements Calculator</h2>
    <h4>
        Membrane elements calculator.
    </h4>

    <div class="row">
        <div class="col-md-6">
            <div class="panel with-nav-tabs panel-default">
                <div class="panel-heading">
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#membraneGeometry">Geometry</a> </li> 
                        <li><a data-toggle="tab" href="#membraneProperties">Properties</a> </li>
                        <li><a data-toggle="tab" href="#membraneCalculations">Calculations</a> </li>
                    </ul>
                </div>
                <div class="tab-content">
                    <div id="membraneGeometry" class="tab-pane panel-body fade in active">
                        @Html.Partial("_membraneGeometry")
                    </div>
                    <div id="membraneProperties" class="tab-pane panel-body fade">
                        @Html.Partial("_membraneProperties")
                    </div>
                    <div id="membraneCalculations" class="tab-pane panel-body fade">
                        @Html.Partial("_membraneCalculations")    
                    </div>
                </div>
                
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Section</h3>
                </div>
                <div class="panel-body">
                    <div id="membraneCanvas" class="canvasMembrane">

                    </div>
                </div>
            </div>
        </div>

    </div>



</div>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.0/angular.min.js"></script>



@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/Membrane")
@Scripts.Render("~/bundles/progress")

@Styles.Render("~/Content/angular")


<script src="~/Scripts/Membrane/Services/canvasFactory.js"></script>
<script src="~/Scripts/Membrane/Services/drawingService.js"></script>
<script src="~/Scripts/Membrane/Controllers/geometryCtrl.js"></script>
<script src="~/Scripts/Membrane/Controllers/propertiesCtrl.js"></script>
<script src="~/Scripts/Membrane/Controllers/calculationsCtrl.js"></script>
<script src="~/Scripts/Membrane/Controllers/controlPanelCtrl.js"></script>



