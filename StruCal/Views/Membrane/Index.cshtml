<h2>Membrane</h2>


<div class="container-fluid" ng-app="rcBeam">
    <h2>Welcome to the Concrete Elements Calculator</h2>
    <h4>
        The calculator checks section capacity of structural elements according to EN-1992-1.
    </h4>
    <div class="panel panel-default">
        <!-- Trigger the modal with a button -->
        <div class="panel-heading">
            <h3 class="panel-title">Control panel</h3>
        </div>
        <div class="panel-body">
            <div class="form-inline">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalCoefficients">Coefficients</button>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalConcrete">Concrete</button>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalSteel">Steel</button>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Sections <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a data-toggle="modal" href="#modalRectangularSection">Rectangular</a></li>
                        <li><a data-toggle="modal" href="#modalCircularSection">Circular</a></li>
                        <li><a data-toggle="modal" href="#modalCustomSection">Custom</a></li>
                    </ul>
                </div>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalLoads">Loads</button>
            </div>
            <br />
            <div>
                @*@Html.Partial("_ControlPanel")*@
            </div>
        </div>
    </div>
    <div class="row equal-panel">

        <div class="col-md-6">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Input</h3>
                </div>
                <div class="panel-body">
                    @*@Html.Partial("_InputPanel")*@
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Section</h3>
                </div>
                <div class="panel-body">
                    <div id="membraneCanvas" class="canvas">

                    </div>
                </div>
            </div>

        </div>

    </div>



</div>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.0/angular.min.js"></script>



@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/Membrane")

@Scripts.Render("~/bundles/progress")

@Styles.Render("~/Content/angular")




