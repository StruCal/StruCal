

<div ng-controller="geometryCtrl">
    <div ng-form="geometryForm">
        <div>
            <div class="panel panel-default" ng-repeat="vertex in vertices" ng-form="rowForm">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <label class="col-md-2 control-label">Vertex: {{$index + 1}}</label>
                            <label class="col-md-3 control-label" ng-show="!showDetails">X: {{vertex.x | numberFormatter}} [mm]</label>
                            <label class="col-md-3 control-label" ng-show="!showDetails">Y: {{vertex.y | numberFormatter}} [mm]</label>
                            <button ng-click="showDetails=true" ng-show="!showDetails" class="col-md-1 col-md-offset-3 btn btn-default"><span class="glyphicon glyphicon-chevron-down"></span></button>
                            <button ng-click="showDetails=false" ng-show="showDetails" class="col-md-1 col-md-offset-9 btn btn-default"><span class="glyphicon glyphicon-chevron-up"></span></button>
                        </div>
                    </div>
                   
                    <div ng-show="showDetails">
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-md-5 control-label text-right">X [mm]: </label>
                                        <div class="col-md-7">
                                            <label class="control-label" ng-show="!showForms">{{vertex.x | numberFormatter}}</label>
                                            <input type="number" class="form-control" ng-model="vertex.x" required ng-show="showForms" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-md-5 control-label text-right">Y [mm]: </label>
                                        <div class="col-md-7">
                                            <label class="control-label" ng-show="!showForms">{{vertex.y | numberFormatter}}</label>
                                            <input type="number" class="form-control" ng-model="vertex.y" required ng-show="showForms" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-md-5 control-label text-right">Support X: </label>
                                        <div class="col-md-7">
                                            <div class="btn-group" data-toggle="buttons">
                                                <label class="btn btn-default btn-sm active">
                                                    <input type="checkbox" autocomplete="off" ng-model="vertex.supportX" ng-disabled="!showForms">
                                                    <span class="glyphicon glyphicon-ok chbox"></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-md-5 control-label text-right">Support Y: </label>
                                        <div class="col-md-7">
                                            <div class="btn-group" data-toggle="buttons">
                                                <label class="btn btn-default btn-sm active">
                                                    <input type="checkbox" autocomplete="off" ng-model="vertex.supportY">
                                                    <span class="glyphicon glyphicon-ok chbox" ng-model="vertex.supportY" ng-disabled="!showForms"></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-md-5 control-label text-right">Load X [kN]: </label>
                                        <div class="col-md-7">
                                            <label class="control-label" ng-show="!showForms">{{vertex.loadX | numberFormatter}}</label>
                                            <input type="text" class="form-control" ng-model="vertex.loadX" required ng-show="showForms" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-md-5 control-label text-right">Load Y [kN]: </label>
                                        <div class="col-md-7">
                                            <label class="control-label" ng-show="!showForms">{{vertex.loadY | numberFormatter}}</label>
                                            <input type="number" class="form-control" ng-model="vertex.loadY" required ng-show="showForms" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @*<div class="form-inline">
                                    <div class="form-group">*@
                                        <button ng-click="showForms=true" ng-show="!showForms" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span> Edit</button>
                                        <button ng-click="showForms=false" ng-show="showForms" class="btn btn-success"><span class="glyphicon glyphicon-save"></span> Save</button>
                                        <button ng-click="remove($index)" ng-show="vertices.length > 0" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Remove</button>
                                    @*</div>
                                </div>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button class="btn btn-primary" ng-click="add()" ng-disabled="vertices.length >4"><span class="glyphicon glyphicon-plus"></span> Add</button>
        </div>
    </div>

</div>
