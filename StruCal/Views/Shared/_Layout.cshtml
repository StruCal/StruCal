<!DOCTYPE html>
<html lang="en">
<head>
    <title>simpledesign</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <!--Add Montserrat font-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">

    @Styles.Render("~/Content/custom")
    @Scripts.Render("~/bundles/custom")
    @Scripts.Render("~/bundles/layoutScript")

    @RenderSection("scripts", required: false)
</head>
<body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="60" style="padding-top:60px;">
    <nav id="navbar"class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a id="title" class="navbar-brand site-title" href="@Url.Action("Index", "Home")">simple<strong>design</strong></a>
                <span id="home">home</span>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#about">ABOUT</a></li>
                    <li class="dropdown">
                        <a href="#portfolio" class="dropdown-toggle" data-toggle="dropdown" role="button"
                            aria-haspopup="true" aria-expanded="false">PRODUCTS<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a>FREE</a></li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("SECTION PROPERTIES", "CustomSection", "SectionProperties")</li>
                            <li>@Html.ActionLink("CONCRETE COVER", "Index", "Cover")</li>
                            <li>@Html.ActionLink("RC BEAM", "Index", "RCBeam")</li>
                            <li>@Html.ActionLink("SHEAR REINFORCEMENT", "Index", "ShearReinforcement")</li>
                            <li>@Html.ActionLink("CONCRETE PROPERTIES", "Index", "ConcreteProperties")</li>
                            <li>@Html.ActionLink("2D FEA", "Index", "FEA")</li>
                        </ul>
                    </li>
                    <li><a href="#pricing">LICENSE</a></li>
                    <li><a href="#contact">CONTACT</a></li>
                    <li><a href="#login">LOGIN</a></li>
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

</body>
</html>