@model StruCal.ViewModels.RectangularSectionViewModel
@{
    ViewBag.Title = "Index";
    Layout = "_SectionPropertiesLayout.cshtml";
}

<p class="text-justify">
Please provide the width and the height of the rectangular section.
</p>
<br />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div id="inputForms">
                @Html.Partial("_ValidationPartial")
                <div class="form-group">
                    @Html.LabelFor(model => model.Width, new { @class = "control-label" })
                    @Html.EditorFor(model => model.Width, new { htmlAttributes = new { @class = "form-control", @placeholder = "7" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Height, new { @class = "control-label" })
                    @Html.EditorFor(model => model.Height, new { htmlAttributes = new { @class = "form-control",@placeholder="5" } })
                </div>

                <div class="form-group">
                    <input id="runButton" type="submit" value="Run" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
    <div class="col-md-8">
        <div id="canvas">

        </div>
    </div>
</div>
@Html.Partial("_ResultsPartial", Model)

