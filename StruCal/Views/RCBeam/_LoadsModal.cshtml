

<!-- Modal Loads-->
<div class="modal fade" id="modalLoads" role="dialog" ng-controller="loadsCtrl">
    <div class="modal-dialog" style="max-height:75%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Loads</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="text-left" >#</th>
                                <th class="text-left">Load Case</th>
                                <th class="text-left">Axial Force [N]</th>
                                <th class="text-left"></th>
                       
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="vert-align" ng-repeat="load in loadCases">
                                <td class="col-sm-1">
                                <label class="control-label">{{$index + 1}}</label>
                                </td>
                                <td class="col-sm-2">
                                    <label class="control-label" ng-show="!showForms">{{load.name}}</label>
                                    <input type="text" class="form-control" ng-model="load.name" ng-show="showForms" />
                                </td>
                                <td class="col-sm-3">
                                    <label class="control-label" ng-show="!showForms">{{load.normalForce | numberFormatter}}</label>
                                    <input type="number" class="form-control" ng-model="load.normalForce" ng-show="showForms" />
                                </td>
                                <td class="col-sm-2">
                                    <a href="#" ng-click="showForms=false;apply($index,load.name,load.normalForce)" class="glyphicon glyphicon-ok btn btn-default" ng-show="showForms"> Save</a>
                                </td>
                                <td class="col-sm-1">
                                    <a href="#" ng-click="showForms=true" class="glyphicon glyphicon-pencil btn btn-default"></a>
                                </td>
                                <td class="col-sm-1">
                                    <a href="#" ng-click="remove($index)" ng-show="loadCases.length > 1" class="glyphicon glyphicon-remove btn btn-default"></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <button class="btn btn-primary" ng-click="add()" ng-disabled="loadCases.length >4">Add</button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" ng-click="save()">Save changes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

