<div ng-controller="resultPanelCtrl">
    <div class="row">
            <label class="control-label col-md-5">Compression capacity: </label>
            <label class="control-label col-md-4 text-right">{{compressionForce | numberFormatter}}</label>
            <label class="control-label col-md-1">[N]</label>
    </div>
    <div class="row">
            <label class="control-label col-md-5">Tension capacity: </label>
            <label class="control-label col-md-4 text-right">{{tensionForce | numberFormatter}}</label>
        <label class="control-label col-md-1">[N]</label>
    </div>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th class="text-left">#</th>
                <th class="text-left">Load Case</th>
                <th class="text-left">Axial Force [N]</th>
                <th class="text-left">Capacity [Nmm]</th>

            </tr>
        </thead>
        <tbody>
            <tr class="vert-align " ng-repeat="load in loadCaseResults" ng-class="{info: highlight($index)}">
                <td class="col-sm-1">
                    <label class="control-label">{{$index + 1}}</label>
                </td>
                <td class="col-sm-2">
                    <label class="control-label">{{load.LoadCase.Name}}</label>
                </td>
                <td class="col-sm-3">
                    <label class="control-label">{{load.LoadCase.NormalForce | numberFormatter}}</label>
                </td>
                <td class="col-sm-3">
                    <label class="control-label">{{load.Mrd | numberFormatter}}</label>
                </td>
            </tr>
        </tbody>
    </table>
</div>
